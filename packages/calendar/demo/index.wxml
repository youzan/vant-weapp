  />

  <van-cell
    is-link
    title="自定义日期范围"
    data-type="single"
    data-id="customRange"
    value="{{ computed.formatFullDate(date.customRange) }}"
    bind:click="show"
  />

  <van-cell
    is-link
    title="自定义按钮文字"
